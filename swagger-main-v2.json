{
  "openapi": "3.0.0",
  "paths": {
    "/v2/cats": {
      "post": {
        "description": "Creates a new cat entry in the system with the provided details.",
        "operationId": "createV2",
        "parameters": [
          {
            "name": "X-MyHeader",
            "in": "header",
            "description": "Custom header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Details of the cat to be created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Cat"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully created a cat."
          },
          "400": {
            "description": "Invalid input data."
          },
          "403": {
            "description": "Forbidden."
          }
        },
        "summary": "Creates a new cat",
        "tags": [
          "cats"
        ]
      },
      "get": {
        "description": "Fetches and returns a list of all cats stored in the system.",
        "operationId": "findAllV2",
        "parameters": [
          {
            "name": "X-MyHeader",
            "in": "header",
            "description": "Custom header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Maximum number of cats to return",
            "schema": {
              "minimum": 1,
              "maximum": 100,
              "example": 5,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of cats.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Cat"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameter (e.g. non-numeric 'limit')."
          },
          "403": {
            "description": "Forbidden."
          }
        },
        "summary": "Retrieve all cats",
        "tags": [
          "cats"
        ]
      }
    },
    "/v2/cats/{name}": {
      "get": {
        "description": "Retrieves details of a specific cat by its name.",
        "operationId": "findOneV2",
        "parameters": [
          {
            "name": "X-MyHeader",
            "in": "header",
            "description": "Custom header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "required": true,
            "in": "path",
            "description": "The name of the cat to retrieve",
            "schema": {
              "minLength": 2,
              "maxLength": 20,
              "example": "Garfield",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved cat.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cat"
                }
              }
            }
          },
          "400": {
            "description": "'name' must be longer than or equal to 2 characters."
          },
          "403": {
            "description": "Forbidden."
          },
          "404": {
            "description": "Cat not found."
          }
        },
        "summary": "Get a specific cat",
        "tags": [
          "cats"
        ]
      }
    },
    "/v2/healthcheck": {
      "get": {
        "description": "Returns the health status of the API service.",
        "operationId": "healthCheckV2",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Service is healthy and running."
          }
        },
        "summary": "Health check endpoint.",
        "tags": [
          "health"
        ]
      }
    }
  },
  "info": {
    "title": "API Documentation V2",
    "description": "New generation API endpoints",
    "version": "2.0.0",
    "contact": {
      "name": "API Support",
      "url": "https://example.com/support",
      "email": "support@example.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "health",
      "description": "System health check endpoints"
    },
    {
      "name": "cats",
      "description": "Operations related to cats management"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "components": {
    "schemas": {
      "Cat": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the cat",
            "example": "Mittens",
            "minLength": 2,
            "maxLength": 20
          },
          "age": {
            "type": "number",
            "description": "The age of the cat",
            "example": 3,
            "minimum": 0,
            "maximum": 30
          },
          "breed": {
            "type": "string",
            "description": "The breed of the cat",
            "example": "Siamese",
            "minLength": 2,
            "maxLength": 50
          },
          "gender": {
            "description": "The gender of the cat",
            "example": "Male",
            "enum": [
              "Male",
              "Female"
            ],
            "type": "string"
          }
        },
        "description": "Description of the Cat schema",
        "required": [
          "name",
          "age",
          "breed",
          "gender"
        ]
      }
    }
  }
}